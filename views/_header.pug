header.header
  nav.nav.nav--tours 
    a.nav__el--tour(href='/') Tours
    //- - if (user.role === 'admin')
    //-   a.nav__el(href='/') Create the tours
  .header__logo
    img(src='/img/applogoheadertest.png' alt='tunisia logo')
  nav.nav.nav--user
      if user
        a.nav__el.nav__el--logout Log out
        a.nav__el(href='/me')
          img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
          span= user.name.split(' ')[0]
      else
        a.nav__el(href='/login') Login
        a.nav__el.nav__el--cta(href='/signup') Sign Up
